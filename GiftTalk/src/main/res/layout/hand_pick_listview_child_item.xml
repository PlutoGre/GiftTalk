<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:descendantFocusability="blocksDescendants">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_hand_pick_list_view_child_item"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        app:riv_corner_radius="10dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/hand_pick_listview_child_img"
        android:scaleType="fitXY"
        app:riv_corner_radius="10dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/listview_item_favorite"
        android:gravity="center"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp">
        <ImageButton
            android:id="@+id/iv_hand_pick_list_view_child_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_compact_favourite_normal"
            android:background="#00ffffff"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/tv_hand_pick_list_view_child_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40383"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hand_pick_list_view_child_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hhhhhhhhhhh"
        android:layout_alignBottom="@id/riv_hand_pick_list_view_child_item"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="17dp"/>
</RelativeLayout>